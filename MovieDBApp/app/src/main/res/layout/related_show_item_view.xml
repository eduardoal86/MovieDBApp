<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="#C3FF66">

    <ImageView
        android:id="@+id/related_poster"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        tools:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/related_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/related_poster"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        tools:text="The Tonight Show\nStarring Jimmy Fallon" />

</LinearLayout>